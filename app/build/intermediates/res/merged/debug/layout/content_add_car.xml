<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nair_sangeeth.mini_project_s6.AddCar"
    tools:showIn="@layout/activity_add_car">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add A Car"
            android:id="@+id/t8"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/abc_action_bar_progress_bar_size"
            android:textColor="@color/cast_intro_overlay_background_color" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Brand Name"
            android:ems="10"
            android:id="@+id/t9"
            android:layout_below="@+id/t8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="91dp"
            android:layout_alignRight="@+id/t8"
            android:layout_alignEnd="@+id/t8"
            android:theme="@style/AlertDialog.AppCompat.Light"
            android:textColor="@color/cast_intro_overlay_button_background_color"
            android:text="Brand Name"
            android:textSize="18dp"
            android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Registration Number"
        android:ems="10"
        android:id="@+id/brandname"
        android:textSize="18sp"
        android:textColor="@color/cast_intro_overlay_button_background_color"
        android:layout_below="@+id/t9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:textAlignment="center" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Hardware Kit ID"
            android:ems="10"
            android:id="@+id/editText6"
        android:textSize="18sp"
            android:textColor="@color/cast_intro_overlay_button_background_color"
        android:layout_below="@+id/brandname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:textAlignment="center" />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/b6"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:layout_marginBottom="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
